@page
@model CoreBGH.Pages.Modul07.RestModel
@{
    ViewData["Title"] = "Rest";
}

<h1>Rest</h1>
<div class="row">
    <div class="col">
        <div class="input-group">
            <input class="form-control border-secondary py-2"
                   id="Input1"
                   type="search">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="list-group" id="liste1">
            <div class="list-group-item active">
                To Do Items
            </div>
            @if (Model.TodoListe == null)
            {
                <div class="list-group-item">
                    keine Daten
                </div>
            }
            else
            {
                @foreach (var item in Model.TodoListe)
                {
                    <div class="list-group-item">
                        <h3 style='@(item.completed?"text-decoration: line-through;":"")'>@item.title</h3>
                        <span class="badge badge-secondary">@item.id</span>
                        <span class="float-lg-right">@item.userId </span>  @item.completed
                    </div>
                }
            }
        </div>
    </div>
</div>
@section Scripts
{
<script>
$(document).ready(function(){
  $("#Input1").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#liste1 h3").filter(function() {
      $(this).parent().toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
}